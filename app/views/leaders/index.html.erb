<%- title @page_title_text %>

<section class="section-leaders section_gray">
    <div class="wrapper">
        <% @leaders.each do |leader| %>
            <div class="leader__item" id="leader__item-<%= leader.id %>">
                <div class="leader__item_text">
                    <h5 class="leader__item_title"><%= link_to leader.title, leader_url(leader.page_title, subdomain: false)%></h5>
                    <p><%= leader.description %></p>
                </div>
                <div class="leader__item_file">
                    <%= link_to leader.file do %>
                        <%= icon("fa-solid", "file-pdf")%>
                        <br>
                        <span class="leader-file__name"><%= leader.file.filename %></span>
                    <% end %>
                    <span class="leader-file__size small"><%= number_to_human_size leader.file.byte_size %></span>
                </div>
            </div>
        <% end %>
    </div>
</section>
