<%- title @page_title_text %>

<section class="section-about section_gray">
    <div class="wrapper flex_stretch_start">
        <%= render "shared/sidebar" %>
        <div class="about-list">
            <div class="content-wrapper">
                <% @leaders.each do |leader| %>
                    <div class="leader__item" id="leader_id_<%= leader.id %>">
                        <div class="leader__img left">
                            <% if leader.image.present? %>
                                <%= image_tag(leader.image, alt: leader.name, title: leader.name, class: "leader__img_inside") %>
                            <% else %>
                                <%= image_tag("noimage.png", alt: "Нет изображения", title: 'Нет изображения', class: "leader__img_inside") %>
                            <% end %>
                        </div>
                        <div class="leader__content">
                            <div class="leader__title"></div>
                            <div class="leader__info"></div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>
