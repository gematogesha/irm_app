<div class="admin-form">
    <%= form_with model: @theme, data: {turbo: false} do |form| %>
        <div class="form">

            <%= form.label :title, class: "form__item form__item_label" %>
            <%= form.text_field :title, class: "form__item form__item_input" %>

            <%= form.submit class: "button button_primary button_form"%>
        </div>
    <% end %>
</div>
