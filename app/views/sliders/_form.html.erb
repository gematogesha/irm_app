<%= form_with model: @slider, data: {turbo: false} do |form| %>
    <div class="form">

        <%= form.label :title %>
        <%= form.text_field :title, class: "input"  %>

        <%= form.label :description %>
        <%= form.text_area :description, class: "input"  %>

        <%= form.label :link %>
        <%= form.text_field :link, class: "input"  %>

        <%= form.label :image %>
        <%= form.file_field :image, class: "input"  %>
        
        <%= form.submit class: "button button_primary"%>
        </div>
    <% end %>
