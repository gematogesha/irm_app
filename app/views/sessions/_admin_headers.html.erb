<h4 class="title"><%= Header.model_name.human(count: :many) %>
    <%= link_to icon('fa-solid', 'plus', class: "icon__create"), new_header_path, title: "Создать", class: "create" %></h4>
<% @headers.each do |header| %>
    <div class="admin-list__item" id="header_id_<%= header.id %>">
        <div class="admin-list__img left">
            <%= link_to edit_header_path(header.id), class: "admin-list__link-img flex_cneter_center edit" do %>
                <%= icon("fa-solid", "file")%>
            <% end %>
        </div>
        <div class="admin-list__title">
            <%= link_to edit_header_path(header.id), class: "edit" do %>
                <%= header.title %>
                <%= icon("fa-solid", "pen-to-square", class: "icon__edit")%>
            <% end %>
            <%= button_to icon("fa-solid", "trash-can", class: "icon__delete"), header_path(header.id), 
                    method: :delete, 
                    form: {data: {turbo_confirm: "Вы точно хотите удалить элемент?" }}, 
                    class: "delete" %>
        </div>
            <div class="admin-list__info">
                <div class="admin-list__date small right"><%= l(header.created_at, format: :long) %></div>
            </div>
    </div>
<% end %>
