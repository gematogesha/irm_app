<h4 class="title"><%= About.model_name.human(count: :many) %>
    <%= link_to icon('fa-solid', 'plus', class: "icon__create"), new_about_path, title: "Создать", class: "create" %></h4>
<% @abouts.each do |about| %>
    <div class="admin-list__item" id="about_id_<%= about.id %>">
        <div class="admin-list__img left">
            <%= link_to edit_about_path(about.page_title), class: "admin-list__link-img flex_cneter_center edit" do %>
                <%= icon("fa-solid", "file")%>
            <% end %>
        </div>
        <div class="admin-list__title">
            <%= link_to edit_about_path(about.page_title), class: "edit" do %>
                <%= about.title %>
                <%= icon("fa-solid", "pen-to-square", class: "icon__edit")%>
            <% end %>
            <%= button_to icon("fa-solid", "trash-can", class: "icon__delete"), about_path(about.page_title), 
                    method: :delete, 
                    form: {data: {turbo_confirm: "Вы точно хотите удалить элемент?" }}, 
                    class: "delete" %>
        </div>
        <div class="admin-list__info">
            <div class="admin-list__date small right"><%= l(about.created_at, format: :long) %></div>
        </div>
    </div>
<% end %>
