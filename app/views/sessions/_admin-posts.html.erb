<div class="admin-list__posts admin-list">
    <h4 class="title">Новости
        <%= link_to icon('fa-regular', 'plus'), new_post_path, title: "Создать", class: "create" %></h4>
    <% @posts.each do |post| %>
        <div class="admin-list__item" id="post_id_<%= post.id %>">
            <div class="admin-list__item_img left flex-block">
                <%= link_to edit_post_path(post.number), class: "edit flex-block" do %>
                    <% if post.image.present? %>
                        <%= image_tag(post.image, alt: post.title, title: post.title) %>
                    <% else %>
                        <%= image_tag("noimage.png", alt: "Нет изображения", title: 'Нет изображения') %>
                    <% end %>
                <% end %>
            </div>
            <div class="admin-list__item_info">
                <div class="admin-list__item_title">
                    <%= link_to edit_post_path(post.number), class: "edit" do %>
                        <%= post.title %>
                        <%= icon("fa-regular", "pen-to-square")%>
                    <% end %>
                    <%= button_to icon("fa-regular", "trash-can"), post_path(post.number), 
                        method: :delete, 
                        form: {data: {turbo_confirm: "Вы точно хотите удалить новость?" }}, 
                        class: "delete" %>
                </div>
                <div class="admin-list__item_date small right"><%= l(post.created_at, format: :long) %></div>
            </div>
        </div>
    <% end %>
</div>
