<% @sliders.each do |slider| %>
    <li>
        <div class="slider__item" id="slider__item-<%= slider.id %>" style="background: url(<%= url_for(slider.image) %>) center">
            <div class="wrapper wrapper__flex_center">
                <div class="slider__item_text">
                    <h2 class="slider__item_title title"><%= slider.title %></h2>
                    <p align="justify"><%= slider.description %></p>
                    <%= link_to slider.link, class: "button__link" do %>
                        <div class="button button__primary">Подробнее</div>
                    <% end %>
                </div>
            </div>
        </div>
    </li>
<% end %>
