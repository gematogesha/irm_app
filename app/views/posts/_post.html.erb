<div class="post-item" id="post_id_<%= post.id %>">
    <div class="post-img left flex-block">
        <%= link_to post_path(post.number), class: "left flex-block" do%>
            <% if post.image.present? %>
                <%= image_tag(post.image, alt: post.title, title: post.title) %>
            <% else %>
                <%= image_tag("noimage.png", alt: "Нет изображения", title: 'Нет изображения') %>
            <% end %>
        <% end %>
    </div>
    <div class="post-details">
        <div class="post-title">
            <h5><%= link_to post.title, post_path(post.number)%></h5>
        </div>
            <span>
                <% if post.content.to_s.include? '</action-text-attachment>' %>
                    <%= post.content.to_s.split('</action-text-attachment>')[1].to_s.truncate(300, separator: ' ').delete '</div>br' %>
                <% else %>
                    <%= post.content.to_s.truncate(300, separator: ' ') %>
                <% end %>
            </span>
        <div class="post-date small"><%= l(post.created_at, format: :long) %></div>
    </div>
</div>
