<%= form_with model: @document, url: url, data: {turbo: false} do |form| %>
  <div class="form">

    <%= form.label :title%>
    <%= form.text_area :title, rows: 5 , cols: 45 %>

    <%= form.label :description %>
    <%= form.text_area :description, rows: 5 , cols: 45 %>

    <%= form.label :file %>
    <%= form.file_field :file %>

    <%= form.submit class: "button buttom__primary"%>
  </div>
<% end %>