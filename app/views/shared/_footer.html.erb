<footer class="footer">
    <section class="footer-top">
        <div class="wrapper flex_top_between">
            <div class="footer-top__item">
                <%= link_to 'https://rosatom.ru', class: "footer-top__link-logo" do %>
                    <%= image_tag("logo/logo-rosatom_white.png", alt: "Росатом", title: 'Росатом', class: "footer-logo__img") %>
                <% end %>
                <%= link_to 'https://niirosatom.ru/', class: "footer-top__link-logo" do%>
