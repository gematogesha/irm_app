<%= form_with model: @about, url: url, data: {turbo: false} do |form| %>
  <div class="form">

    <%= form.label :title, class: "control-label" %>
    <%= form.text_area :title, rows: 5 , cols: 45 %>

    <%= form.label :content %>
    <%= form.rich_text_area :content %>

    <%= form.label :page_title, class: "control-label" %>
    <%= form.text_field :page_title %>

    <%= form.submit class: "button button__primary"%>
  </div>
<% end %>