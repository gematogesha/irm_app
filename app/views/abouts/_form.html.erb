<div class="admin-form">
    <%= form_with model: @about, url: url, data: {turbo: false} do |form| %>
        <div class="form">
            <%= form.label :title, class: "form__item form__item_label" %>
            <%= form.text_area :title, class: "form__item form__item_textarea" %>

            <%= form.label :page_title, class: "form__item form__item_label" %>
            <%= form.text_field :page_title, class: "form__item form__item_input" %>

            <%= form.label :content, class: "form__item form__item_label" %>
            <%= form.rich_text_area :content, class: "form__item form__item_textarea" %>

            <%= form.submit class: "button button_primary button_form"%>
        </div>
    <% end %>
</div>

